<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spk">

    <TextView
        android:id="@+id/textView78"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:lineSpacingExtra="30sp"
        android:text="Tap on Text to Select !"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mangospk"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="266dp"
        android:lineSpacingExtra="30sp"
        android:text="Mango"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/bananspk"
        android:layout_width="161dp"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="216dp"
        android:layout_toEndOf="@+id/mangospk"
        android:text="Banana"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/queryspk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mangospk"
        android:layout_marginBottom="77dp"
        android:text="Query"
        android:textSize="30sp" />


    <ImageView
        android:layout_width="182dp"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:layout_toEndOf="@+id/mangospk"
        android:background="@drawable/mango" />


    <ImageView
        android:layout_width="182dp"
        android:layout_height="152dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/banana" />


    <ImageView
        android:layout_width="130dp"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="82dp"
        android:background="@drawable/quert" />
</RelativeLayout>